<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/add_ht_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/add_ht_bkg"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:focusable="true"/>
    <TextView
        android:id="@+id/add_ht_choice_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/add_ht_choice"
        app:layout_constraintEnd_toEndOf="@id/add_ht_choice"
        app:layout_constraintTop_toTopOf="@id/add_ht_choice"
        app:layout_constraintBottom_toBottomOf="@id/add_ht_choice"
        android:text="@string/add_ht_text"
        android:textAppearance="@style/search_bar_text"/>

    <ImageView
        android:id="@+id/add_ht_choice_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/add_ht_choice"
        android:src="@drawable/add_ht_bkg"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:clickable="true"
        android:focusable="true"/>
    <TextView
        android:id="@id/add_ht_choice_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/add_ht_choice_2"
        android:text="@string/add_ht_text"
        android:textAppearance="@style/search_bar_text"
        app:layout_constraintEnd_toEndOf="@id/add_ht_choice_2"
        app:layout_constraintTop_toTopOf="@id/add_ht_choice_2"
        app:layout_constraintBottom_toBottomOf="@id/add_ht_choice_2"/>

</androidx.constraintlayout.widget.ConstraintLayout>