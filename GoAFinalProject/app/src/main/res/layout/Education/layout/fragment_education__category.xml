<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="UseCompoundDrawables, ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".Education.Fragments.Education_Category">

        <LinearLayout android:id="@+id/E_C_2_VG1"
            style="@style/EducationBlock.ViewGroup2"
            android:layout_marginBottom="30dp">
            <TextView android:id="@+id/E_C_2_Text1"
                android:text="@string/practice_tests"
                style="@style/EducationBlock.Text2"/>
            <ImageView android:id="@+id/E_C_2_Image1"
                android:src="@drawable/foursquares2"
                style="@style/EducationBlock.Image"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/E_C_2_VG2"
            style="@style/EducationBlock.ViewGroup2"
            android:layout_marginTop="30dp">
            <TextView android:id="@+id/E_C_2_Text2"
                android:text="@string/resources"
                style="@style/EducationBlock.Text2"
                android:layout_width="200dp"/>
            <ImageView android:id="@+id/E_C_2_Image2"
                android:src="@drawable/foursquares2"
                style="@style/EducationBlock.Image"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>