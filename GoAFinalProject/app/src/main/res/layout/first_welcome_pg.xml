<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blurred">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/amies_logo" />

        <TextView
            android:id="@+id/hi_there"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="Hi there, \nwelcome to Amies!"
            android:textAllCaps="false"
            android:textColor="@color/woodBrown"
            android:textSize="32sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/few_questions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:gravity="center"
            android:text="Before you start, we have just \n a few questions"
            android:textAllCaps="false"
            android:textColor="@color/woodBrown"
            android:textSize="20sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            app:srcCompat="@drawable/midbrownseperator1" />

        <Button
            android:id="@+id/get_started"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/getstartedbrown"
            android:minHeight="0dp"
            android:paddingVertical="0dp"
            android:text="GET STARTED"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:backgroundTint="@null" />

    </LinearLayout>

    <TextView
        android:id="@+id/indigenous_acknowledgement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="29dp"
        android:layout_marginTop="156dp"
        android:layout_marginBottom="11dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="@string/landacknowledgement"
        android:textColor="@color/woodBrown"
        android:textSize="12sp"
        android:textStyle="normal" />


</RelativeLayout>