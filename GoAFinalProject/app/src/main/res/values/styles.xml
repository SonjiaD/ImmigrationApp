<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="EducationBlock">

    </style>

    <style name="EducationBlock.ViewGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">25dp</item>
        <item name="android:background">@drawable/category_block_back</item>
    </style>

    <style name="EducationBlock.ViewGroup2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">10dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">25dp</item>
        <item name="android:background">@drawable/category_block_back</item>
    </style>

    <style name="EducationBlock.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/brown</item>
    </style>

    <style name="EducationBlock.Text2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/brown</item>
    </style>

    <style name="EducationBlock.Image">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">25sp</item>
